<div class="container" >
  <h1 class="text-center mt-5 mb-4">FORMS users</h1>
    <% @users.each do |user| %>
    <div class="card text-center shadow mb-5 bg-white rounded">
      <div class="card-header font-italic">
        <%= link_to user.username, user, class: "link" %>
      </div>
      <div class="card-body">
        <div><%= link_to gravatar_for(user, size: 120), user %></div>
        <div class="my-3">
          <%= link_to 'View profile', user, class: "btn btn-primary" %> 
          <% if logged_in? %>
            <% if user == current_user %>
              <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-info" %> 
            <%end%>
          <% end %>
        </div>
      </div>
      <div class="card-footer text-muted">
        <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
      </div>
    </div>
  <% end %>
</div>